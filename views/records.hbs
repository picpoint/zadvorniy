<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">	
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<title>All records</title>
</head>
<body>
	
  {{#if files.length}}
    {{#each files}}
      <img src="image/{{filename}}" alt="">
    {{/each}}
  {{/if}}

	<section class="rec">
    <div class="rec__wrap">
    
      <h2>Records page</h2>
      <a href="/">Home page</a>
      
      <div class="rec__multblock">
        {{#if mass.length}}
          {{#each mass}}
            <div class="rec__eachmult">              

              {{#if files.length}}
                {{#each files}}
                  <img src="image/{{filename}}" alt="">
                {{/each}}
              {{/if}}

              <span>{{title}}</span>
              <span><sub>Премьера</sub></span>
              <span>{{yearsOfIssue}}</span>
              <span><sub>Продолжительность</sub></span>
              <span>{{duration}}</span>
              <div class="rec__link">
                <img src="pict/play.png" alt="play">
                <a href="{{source}}" target="_blank">Посмотреть мультфильм</a>
              </div>  
            </div>
          {{/each}}
        {{/if}}
      </div>
      
      {{#if files.length}}
        {{#each files}}
          <img src="image/{{filename}}" alt="">
        {{/each}}
      {{/if}}
      
    </div>
	</section>  
  

</body>
</html>